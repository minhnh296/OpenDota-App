<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color band with gradient -->
    <item>
        <shape android:shape="rectangle">
            <!-- Gradient from right to left -->
            <gradient
                android:type="linear"
                android:startColor="#0F1923"
                android:centerColor="#FF4655"
                android:endColor="#0F1923"
                android:angle="90"
        </shape>
    </item>


</layer-list>
